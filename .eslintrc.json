{
  "env": {
    "browser": true,
    "amd": true,
    "node": true,
    "es2021": true
  },
  "parser": "babel-eslint",
  "extends": [
    "plugin:@next/next/recommended",
    "plugin:react-hooks/recommended",
    "eslint:recommended",
    "plugin:react/recommended"
  ],
  "rules": {
    "react/react-in-jsx-scope": "off",
    "@next/next/no-document-import-in-page": "off",
    "arrow-parens": "off",
    "react/prop-types": "off"
  },
  "settings": {
    "react": {
      "version": "detect"
    }
  }
}
